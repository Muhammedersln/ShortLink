@model RegisterVM
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header text-center">Yeni bir hesap için kaydolun</h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-controller="Authentication" asp-action="RegisterUser">
                    <div class="form-group mb-3">
                        <label for="fullName">İsim</label>
                        <input asp-for="FullName" type="text" class="form-control" id="fullName" placeholder="Adınız girin" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="emailAddress">E-posta</label>
                        <input asp-for="EmailAddress" type="email" class="form-control" id="emailAddress" placeholder="E-postanızı girin" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-3">
                        <label for="password">Şifre</label>
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifrenizi girin" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group mb-3">
                        <label for="confirmpassword">Şifre Onayla</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmpassword" placeholder="Şifrenizi tekrar girin" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                    <button type="submit" class="btn btn-outline-success mt-2 btn-register">
                        Kayıt Ol
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>